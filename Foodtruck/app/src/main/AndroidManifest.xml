<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.foodtruck">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".actividades.AddPlatosActivity"
                android:label="@string/title_activity_add_platos"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".actividades.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".actividades.DespacharActivity">
        </activity>
        <activity android:name=".actividades.PendienteActivity">
        </activity>
        <activity android:name=".actividades.ActualizarPlatosActivity">
        </activity>
        <activity android:name=".actividades.InsertarPlatosActivity">
        </activity>
        <activity android:name=".actividades.CrearFoodtruckActivity">
        </activity>
        <activity android:name=".actividades.CompraTarjetaActivity">
        </activity>
        <activity android:name=".actividades.ChatActivity">
        </activity>
        <activity android:name=".actividades.DetalleActivity">
        </activity>
        <activity android:name=".actividades.MenuActivity">
        </activity>
        <activity android:name=".actividades.MapaActivity">
        </activity>
        <activity android:name=".actividades.RegistroActivity">
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>