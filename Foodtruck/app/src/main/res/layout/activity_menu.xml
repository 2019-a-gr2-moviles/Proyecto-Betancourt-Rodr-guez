<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actividades.MenuActivity" android:background="#ffffff">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="82dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <TextView
                android:text="Nuestra Variedad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView10"
                android:textAlignment="center"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="22sp" android:textColor="#000000"
                android:layout_marginTop="22dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="395dp"
            android:layout_height="527dp" tools:layout_editor_absoluteY="99dp" tools:layout_editor_absoluteX="8dp">
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/rv_menu"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="83dp" tools:layout_editor_absoluteY="640dp" tools:layout_editor_absoluteX="8dp">
        <Button
                android:text="Comprar"
                android:layout_width="150dp"
                android:layout_height="wrap_content" android:id="@+id/btn_comprar"
                android:layout_gravity="center"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="22sp" android:textColor="#000000"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>