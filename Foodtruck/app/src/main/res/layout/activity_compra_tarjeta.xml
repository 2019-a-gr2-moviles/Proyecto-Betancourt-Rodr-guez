<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actividades.CompraTarjetaActivity" android:background="#ffffff">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="397dp"
            android:layout_height="282dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <TextView
                android:text="Nombre y Apellido"
                android:layout_width="300dp"
                android:layout_height="wrap_content" android:id="@+id/textView26"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_nombre_tarjeta"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"/>
        <TextView
                android:text="NÃºmero de tarjeta"
                android:layout_width="300dp"
                android:layout_height="wrap_content" android:id="@+id/textView27"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txt_numero_tarjeta"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="395dp"
            android:layout_height="121dp" tools:layout_editor_absoluteY="488dp" tools:layout_editor_absoluteX="8dp">
        <Button
                android:text="Confirmar "
                android:layout_width="100dp"
                android:layout_height="wrap_content" android:id="@+id/btn_confirmar_compra" android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="Cancelar"
                android:layout_width="100dp"
                android:layout_height="wrap_content" android:id="@+id/btn_cancelar_compra" android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="395dp"
            android:layout_height="64dp" tools:layout_editor_absoluteY="304dp" tools:layout_editor_absoluteX="8dp">
        <TextView
                android:text="CV"
                android:layout_width="300dp"
                android:layout_height="wrap_content" android:id="@+id/textView28" android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"
                android:textAlignment="center"/>
        <TextView
                android:text="Fecha de caducidad"
                android:layout_width="300dp"
                android:layout_height="wrap_content" android:id="@+id/textView29" android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="395dp"
            android:layout_height="64dp" tools:layout_editor_absoluteY="382dp" tools:layout_editor_absoluteX="8dp">
        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txt_cv_tarjeta" android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/txt_fecha_tarjeta" android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>