<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actividades.HomeActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="715dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="167dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView"
                android:layout_marginTop="16dp"/>
        <TextView
                android:text="Tipo de Usuario"
                android:layout_width="300dp"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:layout_gravity="center"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"
                android:layout_marginTop="16dp"/>
        <Spinner
                android:layout_width="300dp"
                android:layout_height="wrap_content" android:id="@+id/spinner_usuario"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"/>
        <TextView
                android:text="Usuario"
                android:layout_width="300dp"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_home_usuario"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"/>
        <TextView
                android:text="Contraseña"
                android:layout_width="300dp"
                android:layout_height="wrap_content" android:id="@+id/textView3"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/txt_home_contrasenia"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"/>
        <Button
                android:text="Iniciar Sesión"
                android:layout_width="200dp"
                android:layout_height="wrap_content" android:id="@+id/btn_iniciar_sesion"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"/>
        <Button
                android:text="Registrarse"
                android:layout_width="200dp"
                android:layout_height="wrap_content" android:id="@+id/btn_registrarme_cliente"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"/>
        <Button
                android:text="Registrar Foodtruck"
                android:layout_width="250dp"
                android:layout_height="wrap_content" android:id="@+id/btn_registrar_foodtruck"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>