<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="153dp" android:layout_weight="1">
        <ImageView
                android:layout_width="103dp"
                android:layout_height="109dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView2"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txt_rv_nombre" android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="46dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txt_rv_valor" android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="46dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_input_add"
                android:id="@+id/btn_anadir" android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="36dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_delete"
                android:id="@+id/btn_disminuir" android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="36dp"/>
    </LinearLayout>
</LinearLayout>
