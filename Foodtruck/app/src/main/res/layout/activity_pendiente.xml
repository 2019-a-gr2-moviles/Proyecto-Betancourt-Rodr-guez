<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actividades.PendienteActivity" android:background="#ffffff">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="165dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <TextView
                android:text="PENDIENTE"
                android:layout_width="match_parent"
                android:layout_height="48dp" android:id="@+id/textView11"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"
                android:textAlignment="center"
                android:background="#41ca3b"
                android:layout_gravity="center"
                android:gravity="center"/>
        <Button
                android:text="Buscar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_buscar_orden"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="22sp" android:textColor="#000000"
                android:textAlignment="center"
                android:layout_marginLeft="95dp"
                android:layout_marginRight="95dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="542dp" tools:layout_editor_absoluteY="181dp" tools:layout_editor_absoluteX="8dp"/>
</android.support.constraint.ConstraintLayout>