<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetalleActivity" android:background="#ffffff">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="400dp"
            android:layout_height="64dp" tools:layout_editor_absoluteY="94dp" tools:layout_editor_absoluteX="8dp">
        <TextView
                android:text="Producto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView15" android:layout_weight="1"
                android:layout_gravity="center"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"
                android:textAlignment="center"/>
        <TextView
                android:text="Cantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView16" android:layout_weight="1"
                android:layout_gravity="center"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"
                android:textAlignment="center"/>
        <TextView
                android:text="Valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView17" android:layout_weight="1"
                android:layout_gravity="center"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"
                android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="403dp"
            android:layout_height="82dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <TextView
                android:text="Detalle de su compra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView13" android:layout_weight="1"
                android:layout_gravity="center"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"
                android:layout_marginTop="16dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txt_usuario_detalle" android:layout_weight="1"
                android:layout_gravity="center"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp" android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="161dp" tools:layout_editor_absoluteY="562dp" tools:layout_editor_absoluteX="8dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="69dp">
            <TextView
                    android:text="Valor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView18" android:layout_weight="1"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alegreya_sc"
                    android:textSize="18sp" android:textColor="#000000"
                    android:textAlignment="center"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_valor_detalle" android:layout_weight="1"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alegreya_sc"
                    android:textSize="18sp" android:textColor="#000000"
                    android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="Aceptar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_aceptar" android:layout_weight="1"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alegreya_sc"
                    android:textSize="18sp" android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"/>
            <Button
                    android:text="Cambiar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_cambiar" android:layout_weight="1"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alegreya_sc"
                    android:textSize="18sp" android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="394dp"
            android:layout_height="392dp" tools:layout_editor_absoluteY="162dp" tools:layout_editor_absoluteX="8dp">
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/rv_detalle"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>